<%- include('../partials/header', {fileName: '/css/navbar.css' , fileName2: '/css/new.css' }); %>


    <body>
        <%- include("../partials/navbar") %>

            <div class="container-fluid">
                <!-- to get space from sides -->
                <div class="col-xl-6 col-lg-6 col-md-11 col-11 mx-auto mt-2 text-center">

                    <h1 class="mb-4 mt-2 new_blog">New Article</h1>

                    <form action="/articles" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input required value="<%= article.title %>" type="text" name="title" id="title"
                                class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea required  name="description" id="description"
                                class="form-control" rows="5"><%= article.description %></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label for="markdown">Markdown</label>
                            <textarea required  name="markdown" id="markdown"
                                class="form-control" ><%= article.markdown %></textarea>
                        </div>

                        <!-- image upload -->
                        <div>
                            <div class="form-group mb-4 text-center">
                                <label for="image">Upload Image</label>
                                <input required type='file' name="file" id="image" class="form-control">
                            </div>

                            <div class="new_blog">
                                <div class="btn-group my-4">
                                    <input required class="btn btns" name="category" list="browsers" placeholder="Select Category" id="category">
                                    <datalist id="browsers">
                                        <option value="Food">
                                        <option value="Technology">
                                        <option value="Internet">
                                        <option value="Agriculture">
                                        <option value="Cricket">
                                        <option value="Books">
                                        <option value="Travel">
                                        <option value="Music">
                                    </datalist>
                                </div>
                            </div>
                        </div>

                        <a href="/home" class="btn btn-secondary btns mx-3">Cancel</a>
                        <button class="btn btn-secondary btns mx-3" type="submit">Save</button>
                    </form>
                </div>
            </div>

    </body>

    </html>