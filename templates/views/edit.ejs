<%- include('../partials/header', {fileName: '/css/navbar.css' , fileName2: '/css/edit.css' }); %>



    <body>
        <%- include("../partials/navbar") %>
            <div class="container-fluid">
                <!-- to get space from sides -->
                <div class="col-xl-6 col-lg-6 col-md-11 col-11 mx-auto mt-2 text-center">

                    <h1 class="mb-4 mt-2 new_blog">Edit Article</h1>

                    <form action="/articles/<%= article.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input required value="<%=article.title %>" type="text" name="title" id="title"
                                class="form-control">

                        </div>

                        <div class="form-group">
                            <!-- <label for="description">Description</label>
                            <input required value="<%= article.description %>" name="description" id="description"
                                class="form-control"> -->

                            <label for="description">Description</label>
                            <textarea required value="<%= article.description %>" name="description" id="description"
                                class="form-control"><%= article.description %></textarea>

                        </div>

                        <div class="form-group mb-5">
                            <!-- <label for="markdown">Markdown</label>
                            <input required value="<%= article.markdown %>" name="markdown" id="markdown"
                                class="form-control" cols="40" rows="5"> -->
                            <label for="markdown">Markdown</label>
                            <textarea required value="<%= article.markdown %>" name="markdown" id="markdown"
                                class="form-control"><%= article.markdown %></textarea>
                        </div>

                        <!-- image -->
                        <div>
                            <div class="form-group mb-4 text-center justify-content-center">
                                <label for="image">Upload Image</label>
                                <input required type='file' name="file" id="image" class="form-control" accept="image/*" multiple>
                            </div>

                            <div class="new_blog">
                                <div class="btn-group my-4">
                                    <input required class="btn btns" name="category" list="browsers" placeholder="Select Category" id="category">
                                    <datalist id="browsers">
                                        <option value="Food">
                                        <option value="Technology">
                                        <option value="Internet">
                                        <option value="Agriculture">
                                        <option value="Cricket">
                                        <option value="Books">
                                        <option value="Travel">
                                        <option value="Music">
                                    </datalist>
                                </div>
                            </div>
                        </div>

                        <a href="/home" class="btn btn-primary btns mx-5">Cancel</a>
                        <button class="btn btn-primary btns" type="submit">Save</button>
                    </form>
                </div>



                <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
                integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
                crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
                integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
                crossorigin="anonymous"></script>
    </body>

    </html>